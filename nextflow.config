params {

    fastq               =   "*_{1,2}.fastq.gz"
    database            =   "Burkholderia_pseudomallei_k96243"
    ref                 =   "k96243.fasta"
    patientMetaData     =   "${baseDir}/Reports/data/patientMetaData.csv"
    gwas                =   false
    matrix              =   true
    annotate            =   true
    mixtures            =   false
    phylogeny           =   false
    antibiotic_res      =   true
    strain              =   "all"
    tech                =   "Illumina"
    pairing             =   "PE"
    window              =   10000
    indel_merge         =   true
    tri_tetra_allelic   =   false
    size                =   1000000
    phred               =   "-phred33"
    org                 =   "haploid"
    logo                =   "${baseDir}/Reports/data/ARDaP_logo.png"
    executor            =   "local"
}

includeConfig 'configs/gatk.config'

env.PATH="$PATH:/usr/local/texlive/2017/bin/x86_64-linux/"

process {

    conda = "$CONDA_PREFIX"

    executor = params.executor

    errorStrategy = "ignore"

    withLabel: card {
        cpus = 1
        memory = "4G"
        time = "2h"
    }

    withLabel: index {
        cpus = 1
        memory = "4G"
        time = "2h"
    }

    withLabel: spandx_default {
        cpus = 2
        memory = "4G"
        time = "24h"
    }

    withLabel: spandx_alignment {
        cpus = 1
        memory = "4G"
        time = "24h"
    }
    withLabel: spandx_gatk_haplo {
        cpus = 4
        memory = "8G"
        time = "24h"
    }
	withLabel: spandx_gatk {
        cpus = 4
        memory = "8G"
        time = "24h"
    }

    withLabel: spandx_snpeff {
        cpus = 1
        memory = "8G"
        time = "24h"
    }

    withLabel: spandx_pindel {
        cpus = 2
        memory = "8G"
        time = "96h"
    }

    withLabel: genomic_queries {
        cpus = 1
        memory = "4G"
        time = "2h"
    }

    withLabel: card_queries {
        cpus = 1
        memory = "4G"
        time = "2h"
    }

    withLabel: report {
        cpus = 1
        memory = "4G"
        time = "2h"
    }

	withLabel: master_vcf {
        cpus = 1
        memory = "4G"
        time = "24h"
    }
	withLabel: SNP_matrix {
        cpus = 1
        memory = "4G"
        time = "24h"
    }
}

manifest {
    homePage = 'http://github.com/dsarov/ARDaP'
    description = 'Comprehensive resistance detection from WGS'
    mainScript = 'main.nf'
    version = '1.5.a6'
}
